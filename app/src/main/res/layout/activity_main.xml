<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.sty.content.provider.sms.back.MainActivity">

    <Button
        android:id="@+id/btn_sms_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="备份短信到xml文件中"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_sms_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入一条短信到短信数据库中"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_contact_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询联系人列表"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_contact_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入插入联系人的界面"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"/>
</LinearLayout>
